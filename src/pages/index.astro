---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
import MainCard from "@/components/MainCard.astro";
import GitHubStats from "@/components/mdx/GitHubStats.astro";
---

<BaseLayout title="About Naveen R">
  <MainCard
    title="About Naveen R"
    description="Aspiring Data Scientist | Christ University, Bangalore"
    textOverlay="ABOUT"
    infoIcon="lucide:user"
  >
    <div class="space-y-10 mb-8">
      <!-- Profile Section -->
      <section class="flex flex-col md:flex-row gap-8 items-center md:items-start">
        <div class="avatar">
          <div
            class="w-32 h-32 md:w-40 md:h-40 rounded-xl ring ring-primary ring-offset-base-100 ring-offset-2 overflow-hidden shadow-lg"
          >
            <img src="/profile.png" alt="Naveen R" width="160" height="160" loading="eager" />
          </div>
        </div>

        <div class="flex-1 text-center md:text-left">
          <h1 class="text-4xl md:text-5xl font-extrabold mb-2 text-primary">Naveen R</h1>
          <p class="text-lg md:text-xl text-base-content/80 mb-4 font-medium">Aspiring Data Scientist | Christ University, Bangalore</p>

          <div class="flex flex-wrap gap-3 justify-center md:justify-start mb-6">
            <a
              href="https://github.com/naveen3830"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-sm btn-outline gap-2"
            >
              <Icon name="lucide:github" class="w-4 h-4" />
              <span>GitHub</span>
            </a>
            <a
              href="https://x.com/Naveen3830"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-sm btn-outline gap-2"
            >
              <Icon name="lucide:twitter" class="w-4 h-4" />
              <span>X (Twitter)</span>
            </a>
            <a
              href="https://www.linkedin.com/in/naveen3830/"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-sm btn-outline gap-2"
            >
              <Icon name="lucide:linkedin" class="w-4 h-4" />
              <span>LinkedIn</span>
            </a>
            <a href="mailto:naveenr3830@gmail.com" class="btn btn-sm btn-outline gap-2">
              <Icon name="lucide:mail" class="w-4 h-4" />
              <span>Email</span>
            </a>
          </div>

          <p class="text-base-content/80 text-md md:text-lg leading-relaxed max-w-2xl mx-auto md:mx-0">
            Data Science graduate student at Christ University, Bangalore. Passionate about machine learning, analytics, and building data-driven solutions. Experienced with Python, SQL, and modern ML tools. Always eager to learn and collaborate on innovative projects.
          </p>
        </div>
      </section>

      <!-- GitHub Stats -->
      <section>
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2 text-primary">
          <Icon name="lucide:github" class="w-6 h-6 text-primary" />
          <span>GitHub Statistics</span>
        </h2>
        <GitHubStats username="naveen3830" showLanguages={false} showCommitGraph={true} />
      </section>

      <!-- Tech Stack -->
      <section>
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2 text-primary">
          <Icon name="lucide:code-2" class="w-6 h-6 text-primary" />
          <span>Tech Stack</span>
        </h2>
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4">
          {
            [
              { name: "Python", icon: "simple-icons:python", color: "#3776AB" },
              { name: "R", icon: "simple-icons:r", color: "#276DC3" },
              { name: "SQL", icon: "simple-icons:mysql", color: "#4479A1" },
              { name: "Tableau", icon: "simple-icons:tableau", color: "#E97627" },
              { name: "Power BI", icon: "simple-icons:powerbi", color: "#F2C811" },
              { name: "Docker", icon: "simple-icons:docker", color: "#2496ED" },
              { name: "TensorFlow", icon: "simple-icons:tensorflow", color: "#FF6F00" },
              { name: "LangChain", icon: "simple-icons:chainlink", color: "#375BD2" },
              { name: "MLflow", icon: "simple-icons:mlflow", color: "#0194E2" },
              { name: "HTML5", icon: "simple-icons:html5", color: "#E34F26" },
              { name: "CSS3", icon: "simple-icons:css3", color: "#1572B6" },
              { name: "Git", icon: "simple-icons:git", color: "#F05032" },
            ].map((tech) => (
              <div class="flex flex-col items-center justify-center p-4 bg-base-200 rounded-lg hover:bg-base-300 transition-colors shadow-md">
                <div class="text-3xl mb-2" style={`color: ${tech.color}`}>
                  <Icon name={tech.icon} class="w-10 h-10" />
                </div>
                <span class="text-sm font-medium">{tech.name}</span>
              </div>
            ))
          }
        </div>
      </section>

      <!-- Education Section -->
      <section>
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2 text-primary">
          <Icon name="lucide:graduation-cap" class="w-6 h-6 text-primary" />
          <span>Education</span>
        </h2>
        <ul class="space-y-6">
          <li>
            <span class="font-bold text-lg">Masters Degree in Data Science <span class="text-primary">(8.7 CGPA)</span></span><br/>
            <span class="text-base-content/80">CHRIST (Deemed to be University), Bangalore (2023â€“25)</span>
          </li>
          <li>
            <span class="font-bold text-lg">Bachelors Degree in Mathematics <span class="text-primary">(9.05 CGPA)</span></span><br/>
            <span class="text-base-content/80">M.S Ramaiah University of Applied Sciences, Bangalore</span>
          </li>
        </ul>
      </section>

      <!-- Recent Activity (keep for future use) -->
      <section>
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2 text-primary">
          <Icon name="lucide:activity" class="w-6 h-6 text-primary" />
          <span>Recent Activity</span>
        </h2>
        <!-- Add your recent activity here in the future -->
      </section>
    </div>
  </MainCard>
</BaseLayout>
